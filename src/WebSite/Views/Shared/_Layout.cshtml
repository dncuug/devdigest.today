@using WebSite.ViewModels
@{
    Layout = "_GeneralLayout";
    var vacancies = ViewData["vacancies"] as IList<VacancyViewModel> ?? new List<VacancyViewModel>();
}

@section head{
    @RenderSection("head",  required: false)
}

@section top{
    @RenderSection("top",  required: false)
}

@section scripts{
    @RenderSection("scripts", required: false)
}

<div class="row">
    <div class="col-md-8">
        @RenderBody()
    </div>
    <div class="col-md-4">
    
        <div class="link-fb social-link">
            <a href="https://www.facebook.com/groups/dncuug">
                <span class="fa fa-fw fa-facebook"></span> We on Facebook
            </a>
        </div>
        
        <div class="link-twitter social-link">
            <a href="https://twitter.com/devdigest_today">
                <span class="fa fa-fw fa-twitter"></span> We on Twitter
            </a>
        </div>
        
        <div class="link-github social-link">
            <a href="https://github.com/dncuug">
                <span class="fa fa-fw fa-github"></span> We on GitHub
            </a>
        </div>
    
        <div class="ad">
            <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
            <!-- right side ad -->
            <ins class="adsbygoogle"
                 style="display: block"
                 data-ad-client="ca-pub-9437162291368173"
                 data-ad-slot="5581239879"
                 data-ad-format="auto">
            </ins>
            <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </div>
    
        @if (vacancies.Any())
        {
            <div class="vacancies">
                <h3>Hot Vacancies</h3>
                @foreach (var v in vacancies)
                {
                    @await Html.PartialAsync("_VacancySmallPreview", v)
                }
                <a href="/vacancies/1"> View all vacancies</a>
            </div>
        }
    </div>
</div>
